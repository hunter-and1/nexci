	"require": {
        "php": "^7.3 || ^8.0",
        "codeigniter4/framework": "^4",
		"myth/auth": "^1",
        "codeigniter4/settings": "^2",
        "hermawan/codeigniter4-datatables": "^0.5.3",
		"codeigniter4/translations": "^4"
	},
	"require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1"
	},
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Config\\": "app/Config"
